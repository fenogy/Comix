<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:cardview="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        cardview:cardCornerRadius="2dp"
        cardview:cardElevation="2dp"
        cardview:cardBackgroundColor="@color/offWhite">
    <LinearLayout
            android:id="@+id/comicLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/primary">
        <io.fenogy.comix.view.CoverImageView
                android:id="@+id/comicImageView"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

        <TextView
            android:id="@+id/comicTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:paddingLeft="@dimen/card_padding"
            android:paddingTop="@dimen/card_padding"
            android:paddingRight="@dimen/card_padding"
            android:textSize="@dimen/card_subtext" />

        <TextView
            android:id="@+id/comicPagerTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|start"
            android:padding="@dimen/card_padding"
            android:singleLine="true"
            android:textSize="@dimen/card_padding_openSource"
            android:textStyle="bold" />
    </LinearLayout>
</android.support.v7.widget.CardView>